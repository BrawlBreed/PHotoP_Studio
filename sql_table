/*1*/CREATE TABLE `library`.`users` ( `id` INT(30) UNSIGNED NOT NULL AUTO_INCREMENT , `first_name` VARCHAR(30) NOT NULL , `surname` VARCHAR(70) NULL , `last_name` VARCHAR(70) NOT NULL , `phone` VARCHAR(10) NOT NULL , `email` VARCHAR(100) NOT NULL , `password` VARCHAR(100) NOT NULL , `card_number` VARCHAR(10) NOT NULL , `active` ENUM('1') NULL , `added` DATETIME NOT NULL , `added_user` INT NULL , `last_modify` DATETIME NULL , `last_modify_user` INT NULL , `deleted` ENUM('1') NULL DEFAULT NULL , `delete_date` DATETIME NULL , `delete_user` INT UNSIGNED NOT NULL , PRIMARY KEY (`id`)) ENGINE = InnoDB;
/*2*/CREATE TABLE `library`.`authors` ( `id` INT(30) UNSIGNED NOT NULL AUTO_INCREMENT , `first_name` VARCHAR(30) NOT NULL , `last_name` VARCHAR(70) NOT NULL ,`active` ENUM('1') NULL , `added` DATETIME NOT NULL , `added_user` INT NULL , `last_modify` DATETIME NULL , `last_modify_user` INT NULL , `deleted` ENUM('1') NULL DEFAULT NULL , `delete_date` DATETIME NULL , `delete_user` INT UNSIGNED NOT NULL , PRIMARY KEY (`id`)) ENGINE = InnoDB;
